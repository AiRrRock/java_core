<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox fx:controller="ru.geekbrains.java.level2.lesson4.Controller"
      xmlns:fx="http://javafx.com/fxml">
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" focusTraversable="false"/>
    <HBox>
        <TextField fx:id="messageField" onAction="#sendMessage" HBox.hgrow="ALWAYS"/>
        <Button onAction="#sendMessage" text="Send"/>
    </HBox>
</VBox>